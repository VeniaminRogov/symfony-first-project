{% block breadcrumbs %}

    {% if is_granted('ROLE_USER') %}

        {% set home = 'clients_list' %}
        {% set route = app.request.attributes.get('_route') %}
        {% set routeParams = app.request.attributes.get('_route_params') %}

        <div class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <div class="collapse navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="{{ path(home) }}">Clients list</a>
                            </li>
                            {% if  route !=  home %}
                                ->

                                {% if route == 'clients_form_add' %}
                                    <li class="nav-item">
                                        <a class="" href="{{ path( route ) }}">Add client</a>
                                    </li>
                                {% endif %}
                                {% if route == 'clients_form_edit' %}
                                    <li class="nav-item">
                                        <a class="" href="{{ path( route , {id: routeParams.id}) }}">Edit client: {{ routeParams.id }}</a>
                                    </li>
                                {% endif %}

                            {% endif %}

                        </ul>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}